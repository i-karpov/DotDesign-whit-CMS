@using DotDesign.WebUI.Areas.Cms.Models
@using DotDesign.WebUI.Utility
@model MenuItem

@{
    String itemClass = Model == MenuItem.TwitterUpdates ?
        "active" :
        default(String);
}

<li class="@itemClass">@Html.ActionLink("Twitter updates",
                                        "AllTwitterUpdates",
                                        new
                                            {
                                                controller = "TwitterUpdates",
                                                pageNumber = PagingSettings.FirstPageNumber
                                            })</li>
