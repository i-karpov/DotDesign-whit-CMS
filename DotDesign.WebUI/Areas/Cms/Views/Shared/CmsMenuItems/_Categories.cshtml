@using DotDesign.WebUI.Areas.Cms.Models
@using DotDesign.WebUI.Utility
@model MenuItem

@{
    String itemClass = Model == MenuItem.Categories ?
        "active" :
        default(String);
}

<li class="@itemClass">@Html.ActionLink("Categories",
                                        "AllCategories", new
                                                             {
                                                                 controller = "Categories",
                                                                 pageNumber = PagingSettings.FirstPageNumber
                                                             })</li>
