@using DotDesign.WebUI.Areas.Cms.Models
@using DotDesign.WebUI.Utility
@model MenuItem

@{
    String itemClass = Model == MenuItem.Subscribers ?
        "active" :
        default(String);
}

<li class="@itemClass">@Html.ActionLink("Subscribers",
                                        "AllSubscribers",
                                        new
                                            {
                                                controller = "Subscribers",
                                                pageNumber = PagingSettings.FirstPageNumber
                                            })</li>
